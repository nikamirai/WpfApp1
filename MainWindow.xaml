<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="329*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#9d81ba"></Grid>
        <Image Source="Resources/free-png.ru-62.png" HorizontalAlignment="Left" Width="56" Margin="21,0,0,0"></Image>
        <TextBlock Text="Header" HorizontalAlignment="Center" Foreground="White" FontSize="20" VerticalAlignment="Center"></TextBlock>
        <Grid Background="Wheat" Grid.Row="1"/>
        <Grid Grid.Row="2" Background="#9d81ba"></Grid>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" x:Name="MainFrame" ContentRendered="MainFrame_ContentRendered"/>
        <Button Content="Back" x:Name="btnClickBack" HorizontalAlignment="Right" Click="btnBack"></Button>
    </Grid>  
</Window>
